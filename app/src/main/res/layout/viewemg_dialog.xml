<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorFacebookOrigin">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_marginBottom="20dp"
                >

                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/emgProfile_image"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:src="@drawable/avatar"
                    app:civ_border_width="2dp"
                    app:civ_border_color="@color/colorBlue"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"/>

                <Button
                    android:id="@+id/emgViewImvSelectPhoto"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/ic_camera"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp"
                    android:padding="5dp"
                    android:visibility="invisible"
                    />


            </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            >

            <EditText
                android:id="@+id/editTextfname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_title_size"
                android:textColor="@color/colorBlack"
                android:text="name"
                android:enabled="false"
                />
            <EditText
                android:id="@+id/editTextlname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textSize="@dimen/text_title_size"
                android:textColor="@color/colorBlack"
                android:text="name"
                android:enabled="false"
                />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="14dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Email  :"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_name_size"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/call_email"
                android:text="email"
                android:textStyle="bold"
                android:textColor="#21C500"
                android:layout_toRightOf="@+id/textview"
                android:layout_marginLeft="80dp"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:enabled="false"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/button_blank"
                android:layout_marginLeft="80dp"
                android:id="@+id/callEmail"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="14dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Phone :"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_name_size"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/call_phone"
                android:text="phone"
                android:textStyle="bold"
                android:textColor="#21C500"
                android:layout_toRightOf="@+id/textview"
                android:layout_marginLeft="80dp"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:enabled="false"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/button_blank"
                android:layout_marginLeft="80dp"                android:id="@+id/callPhone"
                />

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="14dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Job                     : "
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_name_size"
                />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Job"
                android:id="@+id/emgJob"
                android:layout_marginLeft="10dp"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_name_size"
                android:enabled="false"
                />
            <Spinner
                android:id="@+id/emgSpinner_type"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="left"
                android:visibility="gone"
                android:textSize="@dimen/text_title_size"

                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="14dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Hospital Name : "
                android:id="@+id/typejob"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_name_size"
                />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Job"
                android:id="@+id/taxi_or_hs_name"
                android:layout_marginLeft="10dp"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_name_size"
                android:enabled="false"
                />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <Button
                android:id="@+id/buttonEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Edit Profile"
                android:backgroundTint="#6FEBFB"
                android:background="@drawable/edt_border_color"
                android:layout_marginBottom="@dimen/activity_vertical_margin"/>
            <Button
                android:id="@+id/buttonDelete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Delete This User"
                android:backgroundTint="#6FEBFB"
                android:background="@drawable/edt_border_color"
                android:layout_marginBottom="@dimen/activity_vertical_margin"/>

        </LinearLayout>


        </LinearLayout>
    </ScrollView>
</RelativeLayout>