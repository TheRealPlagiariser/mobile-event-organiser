<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#fff">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/viewusersv"
                android:textAlignment="viewEnd"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#40FF00"
                android:text="@string/view_user"
                android:gravity="end" />

            <ImageView
                android:id="@+id/eventViewImg"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:src="@drawable/events" />

            <TextView
                android:id="@+id/editTextname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_name_size"
                android:textColor="@color/colorAccent"
                android:text="Time and Address"
                 />


            <TextView
                android:id="@+id/editTextStartT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_current_size"
                android:text="aasdsadsa"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/text_margin"
                 />

            <TextView
                android:id="@+id/editTextEndT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_current_size"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/text_margin"

                />
            <TextView
                android:id="@+id/editTextLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:textSize="@dimen/text_current_size"
                android:layout_marginTop="@dimen/text_margin"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_name_size"
                />
            <TextView
                android:id="@+id/editTextDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_current_size"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/text_margin"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact Information"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_name_size"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                >

                <TextView
                    android:id="@+id/editTextContactEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_current_size"
                    android:layout_marginTop="@dimen/text_margin"

                    />
                <TextView
                    android:id="@+id/editTextPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_current_size"
                    android:layout_marginTop="@dimen/text_margin"

                    />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event Type"
                android:textColor="@color/colorAccent"
                android:layout_marginTop="@dimen/text_margin"
                android:textSize="@dimen/text_name_size"
                />

            <TextView
                android:id="@+id/spinner_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/text_margin"
                android:textSize="@dimen/text_current_size"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                />
            <TextView
                android:id="@+id/attached_file"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Attached File"
                android:textColor="@color/colorAccent"
                android:layout_marginTop="@dimen/text_margin"
                android:textSize="@dimen/text_name_size"
                />

            <TextView
                android:id="@+id/attached_fileName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/text_margin"
                android:textSize="@dimen/text_current_size"
                android:layout_marginBottom="10dp"
                android:textColor="@color/colorPrimary"
                android:hint="Click here to upload file"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                />


            <TextView
                android:id="@+id/add_payment_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/text_margin"
                android:textSize="@dimen/text_name_size"
                android:textColor="@color/colorAccent"
                android:layout_marginBottom="10dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/buttonAttend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Attend"
                    android:backgroundTint="#6FEBFB"
                    android:background="@drawable/edt_border_color"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"/>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</RelativeLayout>