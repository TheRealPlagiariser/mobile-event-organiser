<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="@drawable/images"
    android:paddingLeft="50dp"
    android:paddingRight="50dp"
    tools:context=".SignUpActivity"

    >

    <TextView
        android:id="@+id/signin_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/relative"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/bungee_shade"
        android:text="Sign Up"
        android:textAllCaps="false"
        android:textColor="#D01355"
        android:layout_marginBottom="10dp"
        android:textSize="50sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                android:id="@+id/edtFirstname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint=" First Name"
                android:textColor="#22FF00"
                />
            <EditText
                android:id="@+id/edtLastname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:layout_marginTop="5dp"
                android:hint=" Last Name"
                android:textColor="#22FF00"
                />
            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:layout_marginTop="10dp"
                android:hint=" Email"
                android:textColor="#22FF00"
                />
            <EditText
                android:id="@+id/phonenumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:layout_marginTop="5dp"
                android:hint=" Phone Number"
                android:textColor="#22FF00"
                />
            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:layout_marginTop="5dp"
                android:hint=" Password"
                android:textColor="#22FF00"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/input_reEnterPassword"
                android:inputType="textPassword"
                android:layout_marginTop="5dp"
                android:textColor="#22FF00"
                android:hint=" Confirm password"
                android:layout_below="@id/password" />
            <CheckBox
                android:id="@+id/rememberinfo_signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="   Remember me"/>
            <Button
                android:id="@+id/signupBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relative"
                android:layout_marginTop="20dp"
                android:background="@drawable/filter"
                android:text="Sign Up"/>

        </LinearLayout>


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textview1"
        android:layout_below="@+id/relative"
        android:layout_marginTop="20dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        >
        <TextView
            android:id="@+id/text_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already a member?"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:layout_marginTop="15dp"
            android:textColor="#22FF00"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_login1"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/text_login"
            android:text="    Log In!"
            android:background="#00000000"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textColor="#AC00EA"
            android:textStyle="bold"/>
    </RelativeLayout>
    <ProgressBar
        android:id="@+id/progressBar_sign"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/textview1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:visibility="gone" />
    <TextView
        android:id="@+id/resnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="num"
        android:textSize="16sp"
        android:layout_marginTop="15dp"
        android:textColor="#235756"
        android:visibility="invisible"
        />


</RelativeLayout>